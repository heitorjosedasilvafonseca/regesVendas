@model IEnumerable<Vendas.Models.Clientes>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(@item.Nome, "Details", "Clientes", new { id = @item.ClientesId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientesId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ClientesId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ClientesId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
